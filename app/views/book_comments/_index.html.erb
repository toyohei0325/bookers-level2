    <!--コメント-->
    <h2>Comment</h2>
      <table class="table">
        <tbody>
          <% book_comments.each do |book_comment| %>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
                <%= link_to user.name, user_path(user.id), class: "col-xs-12"%>
              </td>
              <td><%= book_comment.comment %></td>
              <td>
                <% if book_comment.user == current_user %>
                  <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment.id), method: :delete, remote: true, class: 'btn btn-danger' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
