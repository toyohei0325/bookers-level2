<div class="container">
  <div class="row">
    <%= render 'users/list', user: @user, book: @book_new %>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
            <%= link_to @user.name, user_path(@user.id), class: "col-xs-12"%>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.favorited_by?(current_user) %>
              <li>
                <%= link_to book_favorites_path(@book.id), method: :delete do %>
                  <i class="fas fa-heart"></i>
                  <%= @book.favorites.count %>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to book_favorites_path(@book.id), method: :post do %>
                  <i class="far fa-heart"></i>
                  <%= @book.favorites.count %>
                <% end %>
              </li>
            <% end %>
          </td>
          <td>コメント数：<%= @book.book_comments.count %></td>
          <% if current_user.id == @user.id %>
            <td class="btn btn-success"><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td class="btn btn-danger"><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {comfirm: "本当に削除しますか？" } %></td>
          <% end %>
        </tbody>
      </table>
      <!--コメント-->
      <h2>Comment</h2>
      <table class="table">
        <tbody>
          <!--<%= @book_comments.each do |book_comment| %>-->
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
                <%= link_to @user.name, user_path(@user.id), class: "col-xs-12"%>
              </td>
              <td><%= book_comment.comment %></td>
              <td>
                <% if book_comment.user == current_user %>
                  <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment.id), method: :delete, class: 'btn btn-danger' %>
                <% end %>
              </td>
            </tr>
          <!--<% end %>-->
        </tbody>
      </table>
      <!---->
      <!--コメントフォーム-->
      <h2>Comment form</h2>
        <div class="col-xs-10">
          <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
              <%= f.text_area :comment, class: 'col-xs-12 comment'%>
              <%= f.submit "送信", class: 'btn btn-primary'%>
          <% end %>
        </div>
      <!---->
    </div>
  </div>
</div>
